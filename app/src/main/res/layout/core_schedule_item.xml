<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="80dp"
	android:orientation="horizontal"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintTop_toTopOf="parent"
	app:layout_constraintBottom_toBottomOf="parent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/core_schedule_item_start_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:text="12:20"
			android:textSize="15sp"
			android:textStyle="bold"
			android:textColor="@color/colorBlack"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/core_schedule_item_index"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="3"
			android:textColor="@color/colorLightGray2"
			android:textSize="15sp"
			app:layout_constraintBottom_toTopOf="@+id/core_schedule_item_end_time"
			app:layout_constraintEnd_toEndOf="@+id/core_schedule_item_start_time"
			app:layout_constraintStart_toStartOf="@+id/core_schedule_item_start_time"
			app:layout_constraintTop_toBottomOf="@+id/core_schedule_item_start_time" />

		<TextView
			android:id="@+id/core_schedule_item_end_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="6dp"
			android:text="13:50"
			android:textSize="13sp"
			android:textColor="@color/colorBlack"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/core_schedule_item_start_time"
			app:layout_constraintStart_toStartOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<View
		android:layout_width="6dp"
		android:layout_height="match_parent"
		android:layout_marginStart="9dp"
		android:layout_marginEnd="9dp"
		android:background="@drawable/divider_rounded_corners"
		android:backgroundTint="@color/colorAqua"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/core_schedule_item_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Операционные системы"
			android:textSize="15sp"
			android:textStyle="bold"
			android:textColor="@color/colorBlack"
			android:maxLines="1"
			android:ellipsize="end"/>

		<com.google.android.flexbox.FlexboxLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:minHeight="26dp"
			app:flexWrap="wrap">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginEnd="6dp"
				android:text="Б.М. 3204"
				android:textSize="13sp"
				android:textColor="@color/colorLightGray1"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingEnd="10dp"
				android:paddingStart="10dp"
				android:background="@drawable/schedule_tag_rounded_corners"
				android:backgroundTint="@color/colorLightGray3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginEnd="6dp"
				android:text="Лабораторная работа"
				android:textSize="13sp"
				android:textColor="@color/colorLightGray1"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingEnd="10dp"
				android:paddingStart="10dp"
				android:background="@drawable/schedule_tag_rounded_corners"
				android:backgroundTint="@color/colorLightGray3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginEnd="6dp"
				android:text="🔥3"
				android:textSize="13sp"
				android:textColor="@color/colorLightGray1"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingEnd="10dp"
				android:paddingStart="10dp"
				android:background="@drawable/schedule_tag_rounded_corners"
				android:backgroundTint="@color/colorLightGray3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginEnd="6dp"
				android:text="3 группы"
				android:textSize="13sp"
				android:textColor="@color/colorLightGray1"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingEnd="10dp"
				android:paddingStart="10dp"
				android:background="@drawable/schedule_tag_rounded_corners"
				android:backgroundTint="@color/colorLightGray3"/>

		</com.google.android.flexbox.FlexboxLayout>

		<TextView
			android:id="@+id/core_schedule_item_professor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Поляк М.Д. - старший преподаватель и пидорас"
			android:textSize="15sp"
			android:textColor="@color/colorLightGray1"
			android:maxLines="1"
			android:ellipsize="end"/>

	</LinearLayout>

</LinearLayout>