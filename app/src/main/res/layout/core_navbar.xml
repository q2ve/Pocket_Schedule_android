<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/navigation_bar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:elevation="0dp">

	<ImageButton
		android:id="@+id/core_navbar_news_button"
		android:layout_width="70dp"
		android:layout_height="50dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_news"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/core_navbar_schedule_button"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</ImageButton>

	<ImageButton
		android:id="@+id/core_navbar_schedule_button"
		android:layout_width="70dp"
		android:layout_height="50dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_schedule"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</ImageButton>

	<ImageButton
		android:id="@+id/core_navbar_deadlines_button"
		android:layout_width="70dp"
		android:layout_height="50dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_deadlines"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/core_navbar_schedule_button"
		app:layout_constraintTop_toTopOf="parent">

	</ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>