<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/bottom_menu_container_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#F8000000"
		android:orientation="horizontal"
		android:translationY="1000dp" />


	<LinearLayout
	    android:id="@+id/bottom_menu_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:translationY="1000dp"
		android:background="@drawable/bottom_menu_rounded_corners">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
			android:id="@+id/bottom_menu_container_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingTop="15dp"
			android:paddingBottom="15dp"
			android:textColor="#FF000000"
			android:textSize="22sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/bottom_menu_container_exit_button"
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="15dp"
			android:layout_centerInParent="true"
			android:background="@drawable/ic_cancel_cross" />
		</RelativeLayout>

		<FrameLayout
			android:id="@+id/bottom_menu_recycler_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="29dp"/>

	</LinearLayout>
</FrameLayout>