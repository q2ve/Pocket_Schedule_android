<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/bottom_menu_container_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#F8000000"
		android:orientation="horizontal"
		android:translationY="1000dp" />

	<androidx.constraintlayout.motion.widget.MotionLayout
		android:id="@+id/bottom_menu_motion_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="70dp"
		app:layoutDescription="@xml/bottom_menu_motion_scene"
		android:translationY="1000dp">

		<LinearLayout
			android:id="@+id/bottom_menu_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bottom_menu_rounded_corners"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/bottom_menu_container_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:paddingTop="15dp"
					android:paddingBottom="15dp"
					android:textColor="#FF000000"
					android:textSize="22sp"
					android:textStyle="bold" />

				<Button
					android:id="@+id/bottom_menu_container_exit_button"
					android:layout_width="28dp"
					android:layout_height="28dp"
					android:layout_alignParentEnd="true"
					android:layout_centerInParent="true"
					android:layout_marginEnd="15dp"
					android:background="@drawable/ic_cancel_cross" />
			</RelativeLayout>

			<FrameLayout
				android:id="@+id/bottom_menu_recycler_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<ProgressBar
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						/>

				</RelativeLayout>

			</FrameLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="20dp"/>

		</LinearLayout>
	</androidx.constraintlayout.motion.widget.MotionLayout>
</RelativeLayout>